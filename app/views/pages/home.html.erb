<!--For the homepage, use the jumbotron class and text-center to arrange the layout -->

<div class="jumbotron text-center">
    <h1>Welcome To Dev Match</h1>
    <p>A platform where entrepreneurs can meet investors and developers.</p>
</div>

<div class="row">
    <% if model_signed_in? %>
        
        <div class="col-md-6">
          <div class="well">
            <h2 class="text-center">Your Profile</h2>
                <% if current_model.profile %>
                  <%= link_to "Edit your profile", edit_model_profile_path(model_id: current_model.id), class: 'btn btn-success btn-lg btn-block' %>
                  <%= link_to "View your profile", model_path(current_model), class: 'btn btn-success btn-lg btn-block' %>
                <% else %>
                  <p>Create your profile so that you can share your information with the community.</p>
                  <%= link_to "Create your profile", new_model_profile_path(current_model), class: 'btn btn-primary btn-lg btn-block'%>
                <% end %>
            </div>
        </div>
        
        <div class="col-md-6">
          <div class="well">
               <h2 class="text-center">The Community</h2>
                <p>Visit the community to meet other developers, entrepreneurs, and investors!</p>
                <%= link_to "Visit the community", models_path, class: 'btn btn-success btn-lg btn-block' %>
          </div>
        </div>
        
    <% else %>
        <div class="col-md-6">
            <div class="well">
                <h2 class="text-center">Basic Membership</h2>
                <p class="text-center">Sign up for basic and get access to the community.</p><br/>
                <%= link_to 'Free Sign Up', new_model_registration_path(plan: @basic_plan.id), class: 'btn btn-primary btn-lg btn-block' %>
            </div>
        </div>
        
        <div class="col-md-6">
            <div class="well">
                <h2 class="text-center">Pro Membership</h2>
                <p class="text-center">Sign up for pro account for $11/month and get full access.</p><br/>
                <%= link_to 'Pro Sign Up', new_model_registration_path(plan: @pro_plan.id), class: 'btn btn-success btn-lg btn-block' %>
            </div>
        </div>
    <% end %>
    
</div>
