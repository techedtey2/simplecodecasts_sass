<div class="row">

  <div class="col-md-8 col-md-offset-2">

    <h1 style="color:white;">Dev Match Community</h1>

    <p style="color:white;">Welcome to the Dev Match community. Users must fill out a profile in order to be visible in the community.</p>

    <ul class="list-unstyled">

      <% @models.each do |model| %>

        <% if model.profile %>

        <li>

          <div class="well row <%= cycle('white-bg', '') %>">

            <div class="col-sm-4 text-center">

              <% if model.profile.avatar %>

                <%= link_to model do %>

                  <%= image_tag model.profile.avatar.url(:thumb), class: 'model-index-avatar' %>

                <% end %>

              <% end %>

            </div>

            

            <div>

              <%= link_to model do %>

                <h2><%= model.profile.first_name %> <%= model.profile.last_name %></h2>

              <% end %>

              <p>

                <%= model.profile.job_title %> 

                <% if model.plan_id == 2 %>

                  <span class="label label-danger">PRO</span>

                <% end %>

              </p>

            </div>

          </div>

        </li>

        <% end %>

      <% end %>

    </ul>

  </div>

</div>